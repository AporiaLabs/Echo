// Database configuration
datasource db {
  provider = "postgresql" // Set to "postgresql" for postgres
  url      = env("DATABASE_URL")
}

// Client generator configuration
generator client {
  provider = "prisma-client-js"
  // Enable native database types for better performance
  previewFeatures = ["nativeTypes"]
}

model Memory {
  id              String   @id @default(uuid())
  userId          String
  agentId         String
  roomId          String
  content         String   // Keep as String for SQLite
  type            String
  generator       String   // "llm" or "external"
  createdAt       DateTime @default(now())

  @@index([roomId])
  @@index([userId, agentId])
  @@index([type])
}

model Tweet {
  id              String   @id
  text            String
  userId          String
  username        String
  conversationId  String?
  inReplyToId     String?
  createdAt       DateTime @default(now())
  permanentUrl    String?
  likeCount       Int?     @default(0)
  retweetCount    Int?     @default(0)
  replyCount      Int?     @default(0)
  viewCount       Int?     @default(0)

  @@index([userId])
  @@index([conversationId])
  @@index([createdAt])
}
